<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Symphony.UI">
    <Style x:Key="DefaultTextbox" TargetType="TextBox">
        <Setter Property="Background" Value="#38FFFFFF"/>
        <Setter Property="Foreground" Value="#FF2D2D2D"/>
        <Setter Property="BorderBrush" Value="#38000000"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,0,5,0"/>
        <Setter Property="FontFamily" Value="NanumBarunGothic Light"/>
    </Style>
</ResourceDictionary>