<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Symphony.UI">
    <Style x:Key="GradientEmbosedText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5F5F5F" Offset="0"/>
                    <GradientStop Color="#FF7A7A7A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Direction="270" BlurRadius="0" Color="White" ShadowDepth="1" Opacity="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontFamily" Value="NanumBarunGothic Light"/>
    </Style>
</ResourceDictionary>