<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Symphony.UI">
    <Style x:Key="GradientEmbosedText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Theme_Text_Color}"/>
        <Setter Property="Effect" Value="{DynamicResource Theme_Text_Effect}"/>
        <Setter Property="FontFamily" Value="NanumBarunGothic Light"/>
    </Style>
</ResourceDictionary>